<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="540dp"
        android:layout_height="881dp"
        app:srcCompat="@drawable/food3"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-43dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/_logoname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="FOOD"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/addfood_btn"
        android:layout_width="196dp"
        android:layout_height="41dp"
        android:background="@drawable/button_background"
        android:text="ADD Food"
        android:textColorLink="#000000"
        app:icon="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="670dp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="568dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="86dp">

        <EditText
            android:id="@+id/editText_nameFood"
            android:layout_width="317dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext"
            android:text="Name"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editText_descriptionfood"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext"
            android:text="description"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editText_descriptionfood2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext"
            android:text="type"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editText_descriptionfood3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext"
            android:text="categorie"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editText_descriptionfood4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext"
            android:text="quantite"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editText_descriptionfood5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_edittext"
            android:text="unite"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>