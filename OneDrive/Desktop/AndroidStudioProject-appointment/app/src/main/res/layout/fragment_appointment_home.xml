<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Creative Phrase at the Top -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Your Pet Paradise!"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textSize="27sp"
        android:textStyle="bold"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="32dp" />

    <!-- Add Appointment Button -->
    <Button
        android:id="@+id/buttonAddAppointment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC300"
        android:text="Add Appointment"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:padding="12dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonAppointmentList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Appointment List Button -->
    <Button
        android:id="@+id/buttonAppointmentList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC300"
        android:text="Appointment List"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:padding="12dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
